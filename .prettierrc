{
	"semi": false,
	"tabWidth": 2,
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"editor.defaultFormatter": "mattbrannon.prettiest-eslint",
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
